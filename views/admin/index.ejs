<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type = "image/ico" href="/images/favicon.ico">
    <title>后台管理 | HS_HY</title>
    <link rel="stylesheet" href="/stylesheets/admin/admin.css" >
</head>
<body>
    <div class="container">
        <%include ../public/adminHead.ejs%>
        <div class="body">
            <div class="body-head">
                <ul class="wrap">
                    <li class="posts" ><a class="head-active" href="#">文章管理</a></li>
                    <li class="sort"><a href="#">类别管理</a></li>
                    <li class="demoSort"><a href="#">案例管理</a></li>
                    <li class="publish"><a href="/admin/publish/">发表文章</a></li>
                </ul>
            </div>
            <div class="body-content">
                <%var detailLen = details.length%>
                <ul class="content-wrap" id="content-container">
                    <%for(var j = 0; j < detailLen; j++){%>
                    <%var detail = details[j]%>
                    <li class="list-item" data-id="<%=detail.id%>">
                        <a href="/article/<%=detail.type%>/<%=detail.id%>">
                            <span class="item-title"><%=detail.title%></span>
                        </a>
                        <span class="item-data">(<%=detail.data%>)</span>
                        <span class="admin-handle">
                            <a class="edit" href="/admin/edit/<%=detail.id%>">编辑</a>
                            <span class="delete">删除</span>
                        </span>
                    </li>
                    <%}%>
                </ul>
                <%include ../public/paging.ejs%>
            </div>
        </div>
    </div>
    <%include ../public/footer.ejs%>
    <script data-main="/javascripts/admin/admin.js"  src="/javascripts/require.min.js"></script>
</body>
</html>